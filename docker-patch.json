{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "baseBranches": [
    "$default",
    "/release-.*/"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchBaseBranches": [
        "!$default"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ],
  "ignoreTests": true,
  "prHourlyLimit": 10,
  "prConcurrentLimit": 100
}

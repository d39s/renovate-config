{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "baseBranches": [
    "$default",
    "/^release-.*/"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchBaseBranches": [
        "/^release-.*/"
      ],
      "matchDepTypes": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "matchBaseBranches": [
        "$default"
      ],
      "matchDepTypes": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "automergeType": "pr",
      "prCreation": "not-pending"
    }
  ],
  "ignoreTests": true,
  "prHourlyLimit": 10,
  "prConcurrentLimit": 100
}
